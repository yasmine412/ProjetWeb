{% block body %}


    <div id="myModal1" class="modal fade">
        <div class="modal-dialog" id="connexion-dialog">
            <div class="modal-content " id="connexion-content">

                <div class="header">
                    <span class="close"><i class="fa-solid fa-xmark fa-xs" data-dismiss="modal"></i></span>
                    <h4 class="modal-title">Connexion</h4>
                </div>

                <div class="modal-body">
                    <div class="row">
                        <div class="mx-auto col-10 col-md-8 col-lg-6" id="formulaire">
                            <img class="logo-form" src="{{ asset('assets/logo-ymara.png') }}" alt="">
                            <h4>Se connecter à votre compte</h4>


                            <form action="" method="post" class="needs-validation" novalidate>

                                <div class="form-row">
                                    <div class="form-floating col-lg-12">
                                        <input type="email" id="email" name="email" class="form-control my-2 "
                                               placeholder="Adresse Mail" required/>
                                        <label for="email">Adresse Mail</label>
                                        <div class="invalid-feedback">
                                            vérifier votre adresse mail
                                        </div>
                                        <div class="valid-feedback">
                                            Looks good!
                                        </div>
                                    </div>
                                </div>


                                <div class="form-row">
                                    <div class="form-floating col-lg-12">
                                        <input type="password" id="password" name="password" class="form-control my-2 "
                                               placeholder="Mot de passe" required/>
                                        <label for="password">Mot de passe</label>
                                        <div class="invalid-feedback">
                                            vérifier votre mot de passe
                                        </div>
                                        <div class="valid-feedback">
                                            Looks good!
                                        </div>

                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-lg-12">
                                        <button type="submit" class="btn1 mt-2 mb-3">Connexion</button>
                                    </div>
                                </div>


                                    <a href="">Mot de passe oublié?</a>
                                    <p>Vous n'avez pas encore de compte? <a href='{{ path('app_inscription_index') }}'
                                                                            target="_blank">Créez un compte</a></p>




                            </form>

                        </div>
                    </div>

                </div>
            </div>


        </div>

    </div>

{% endblock %}

